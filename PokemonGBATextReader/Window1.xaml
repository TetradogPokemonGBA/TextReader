<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="PokemonGBATextReader.Window1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="PokemonGBATextReader"
	Width="371"
	Height="337">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="0.235955056179775*" MaxHeight="25"/>
			<RowDefinition
				Height="2.5718329794763*" />
			<RowDefinition
				Height="0.188888888888889*" MaxHeight="30" />
		</Grid.RowDefinitions>
		<Menu>
			<MenuItem
				x:Name="miCargar"
				Header="Cargar"
				Click="MiCargar_Click" />
		<MenuItem
				x:Name="miSobre"
				Header="Sobre"
				Click="MiSobre_Click" />
		</Menu>
		<ScrollViewer
			Grid.Row="1"
			VerticalScrollBarVisibility="Auto">
			<TextBox
				x:Name="txtTextoCargado"
				IsReadOnly="True"
				TextWrapping="Wrap" />
		</ScrollViewer>
		<Grid
			Grid.Row="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
				<ColumnDefinition />
				<ColumnDefinition />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<TextBlock
				Text="Offset" />
			<TextBox
				x:Name="txtOffset"
				Grid.Column="1" />
			<TextBlock
				Text="Longitud"
				Grid.Column="2" />
			<TextBox
				x:Name="txtLongitud"
				Grid.Column="3" />
			<Button
				x:Name="btnCargarTexto"
				Content="Cargar Texto"
				Click="BtnCargarTexto_Click"
				Grid.Column="4"
				IsEnabled="False" />
		</Grid>
	</Grid>
</Window>